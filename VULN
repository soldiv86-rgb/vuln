-- Grow a Garden - Auto Favorite/Unfavorite Fruit ONLY when your pet is equipped
-- No UI, no spam, just works

local player = game.Players.LocalPlayer
local Favorite_Item = game.ReplicatedStorage:WaitForChild("GameEvents"):WaitForChild("Favorite_Item")

-- CHANGE THESE TWO LINES ----------------------------------------------------
local FRUIT_NAME = "Carrot [0.38kg"           -- ← Your fruit base name (e.g. Kiwi, Carrot, Banana)
local PET_UUID   = "{9c36deba-17c3-4b0f-a102-e0b45c5ed0e6}"  -- ← Paste your pet's UUID here
-- ---------------------------------------------------------------------------

local running = false

spawn(function()
    while wait(0.5) do
        local petEquipped = false
        
        -- Check if pet is equipped (in Character)
        if player.Character then
            for _, tool in pairs(player.Character:GetChildren()) do
                if tool:IsA("Tool") and string.find(tool.Name, PET_UUID) then
                    petEquipped = true
                    break
                end
            end
        end
        
        -- Start/stop auto fav/unfav
        if petEquipped and not running then
            running = true
            print("Pet equipped → Auto fav/unfav STARTED")
        elseif not petEquipped and running then
            running = false
            print("Pet unequipped → Auto fav/unfav STOPPED")
        end
    end
end)

-- Main loop - only runs when pet is equipped
spawn(function()
    while wait(0.2) do
        if running then
            local fruit = player.Backpack:FindFirstChildWhichIsA("Tool")
            for _, tool in pairs(player.Backpack:GetChildren()) do
                if tool:IsA("Tool") and string.find(tool.Name, FRUIT_NAME) then
                    fruit = tool
                    break
                end
            end
            if fruit then
                pcall(function()
                    Favorite_Item:FireServer(fruit)
                end)
            end
        end
    end
end)

print("Auto fav/unfav loaded! Equip your pet to start.")
