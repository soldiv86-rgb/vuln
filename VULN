-- Egg Enhancer UI - Fully Responsive Dark Theme (Works on ALL Devices)
-- LocalScript â†’ Place in StarterGui or StarterPlayerScripts

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "EggEnhancerUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = playerGui

-- Main Frame (Responsive Size)
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.fromScale(0.85, 0.8)        -- 85% width, 80% height of screen
MainFrame.Position = UDim2.fromScale(0.5, 0.5)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
MainFrame.BorderSizePixel = 0
MainFrame.Visible = false
MainFrame.Parent = ScreenGui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 20)
UICorner.Parent = MainFrame

local UIStroke = Instance.new("UIStroke")
UIStroke.Color = Color3.fromRGB(60, 60, 60)
UIStroke.Thickness = 3
UIStroke.Parent = MainFrame

-- Title Bar
local TitleBar = Instance.new("Frame")
TitleBar.Size = UDim2.fromScale(1, 0.1)
TitleBar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
TitleBar.BorderSizePixel = 0
TitleBar.Parent = MainFrame

local TitleCorner = Instance.new("UICorner")
TitleCorner.CornerRadius = UDim.new(0, 20)
TitleCorner.Parent = TitleBar

local TitleLabel = Instance.new("TextLabel")
TitleLabel.Size = UDim2.fromScale(0.7, 1)
TitleLabel.Position = UDim2.fromScale(0, 0)
TitleLabel.BackgroundTransparency = 1
TitleLabel.Text = "Egg Enhancer - by Jandel"
TitleLabel.TextColor3 = Color3.new(1, 1, 1)
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.TextSize = 24
TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
TitleLabel.TextScaled = true
TitleLabel.Parent = TitleBar

local TitlePadding = Instance.new("UIPadding")
TitlePadding.PaddingLeft = UDim.new(0, 20)
TitlePadding.Parent = TitleLabel

-- Close Button (Top Right)
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.fromScale(0.12, 0.8)
CloseButton.Position = UDim2.fromScale(0.96, 0.1)
CloseButton.AnchorPoint = Vector2.new(1, 0)
CloseButton.BackgroundColor3 = Color3.fromRGB(220, 50, 50)
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.new(1, 1, 1)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextScaled = true
CloseButton.Parent = TitleBar

local CloseCorner = Instance.new("UICorner")
CloseCorner.CornerRadius = UDim.new(0, 12)
CloseCorner.Parent = CloseButton

-- Tab Buttons (Horizontal List)
local TabButtonsFrame = Instance.new("Frame")
TabButtonsFrame.Size = UDim2.fromScale(1, 0.1)
TabButtonsFrame.Position = UDim2.fromScale(0, 0.1)
TabButtonsFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TabButtonsFrame.Parent = MainFrame

local TabLayout = Instance.new("UIListLayout")
TabLayout.FillDirection = Enum.FillDirection.Horizontal
TabLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
TabLayout.VerticalAlignment = Enum.VerticalAlignment.Center
TabLayout.Padding = UDim.new(0, 10)
TabLayout.Parent = TabButtonsFrame

-- Content Area
local TabContent = Instance.new("Frame")
TabContent.Size = UDim2.fromScale(0.95, 0.75)
TabContent.Position = UDim2.fromScale(0.025, 0.2)
TabContent.BackgroundTransparency = 1
TabContent.Parent = MainFrame

-- Tabs Definition
local Tabs = {
	{ Name = "Fruit Name & Pet UUID" },
	{ Name = "Koi UUID" },
	{ Name = "Seal UUID" }
}

local currentTab = nil

local function openTab(tabIndex)
	if currentTab then
		currentTab.Content.Visible = false
		currentTab.Button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
	end
	local tab = Tabs[tabIndex]
	currentTab = tab
	tab.Content.Visible = true
	tab.Button.BackgroundColor3 = Color3.fromRGB(70, 130, 240)
end

-- Create Tabs
for i, tab in ipairs(Tabs) do
	-- Tab Button
	local button = Instance.new("TextButton")
	button.Size = UDim2.fromScale(0.3, 0.8)
	button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
	button.Text = tab.Name
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.GothamSemibold
	button.TextScaled = true
	button.Parent = TabButtonsFrame

	local btnCorner = Instance.new("UICorner")
	btnCorner.CornerRadius = UDim.new(0, 12)
	btnCorner.Parent = button

	local btnPadding = Instance.new("UIPadding")
	btnPadding.PaddingAll = UDim.new(0, 10)
	btnPadding.Parent = button

	tab.Button = button

	-- Tab Content
	local content = Instance.new("ScrollingFrame")
	content.Size = UDim2.fromScale(1, 1)
	content.BackgroundTransparency = 1
	content.ScrollBarThickness = 6
	content.Visible = false
	content.CanvasSize = UDim2.fromScale(0, 0) -- Auto later if needed
	content.AutomaticCanvasSize = Enum.AutomaticSize.Y
	content.Parent = TabContent

	local contentLayout = Instance.new("UIListLayout")
	contentLayout.Padding = UDim.new(0, 15)
	contentLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
	contentLayout.Parent = content

	local contentPadding = Instance.new("UIPadding")
	contentPadding.PaddingTop = UDim.new(0, 20)
	contentPadding.PaddingLeft = UDim.new(0, 20)
	contentPadding.PaddingRight = UDim.new(0, 20)
	contentPadding.Parent = content

	-- Placeholder Text
	local placeholder = Instance.new("TextLabel")
	placeholder.Size = UDim2.fromScale(0.9, 0)
	placeholder.AutomaticSize = Enum.AutomaticSize.Y
	placeholder.BackgroundTransparency = 1
	placeholder.Text = "Content for <b>"..tab.Name.."</b> tab\n\nAdd your TextBoxes, Buttons, etc. here!"
	placeholder.TextColor3 = Color3.fromRGB(220, 220, 220)
	placeholder.Font = Enum.Font.Gotham
	placeholder.TextSize = 20
	placeholder.TextWrapped = true
	placeholder.TextXAlignment = Enum.TextXAlignment.Left
	placeholder.RichText = true
	placeholder.Parent = content

	tab.Content = content

	-- Click to open
	button.MouseButton1Click:Connect(function()
		openTab(i)
	end)
end

-- Open first tab by default
openTab(1)

-- Toggle Button (Always Visible)
local ToggleButton = Instance.new("TextButton")
ToggleButton.Size = UDim2.fromOffset(70, 70)
ToggleButton.Position = UDim2.fromScale(0.05, 0.5)
ToggleButton.AnchorPoint = Vector2.new(0, 0.5)
ToggleButton.BackgroundColor3 = Color3.fromRGB(70, 130, 240)
ToggleButton.Text = "Egg"
ToggleButton.TextColor3 = Color3.new(1, 1, 1)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.TextScaled = true
ToggleButton.Parent = ScreenGui

local ToggleCorner = Instance.new("UICorner")
ToggleCorner.CornerRadius = UDim.new(0, 35)
ToggleCorner.Parent = ToggleButton

local ToggleStroke = Instance.new("UIStroke")
ToggleStroke.Color = Color3.fromRGB(100, 180, 255)
ToggleStroke.Thickness = 4
ToggleStroke.Parent = ToggleButton

-- Toggle Logic
local isOpen = false
local function toggleUI()
	isOpen = not isOpen
	MainFrame.Visible = isOpen

	if isOpen then
		MainFrame.Position = UDim2.fromScale(0.5, -0.5)
		TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quint), 
			{Position = UDim2.fromScale(0.5, 0.5)}):Play()
	else
		TweenService:Create(MainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quint), 
			{Position = UDim2.fromScale(0.5, 1.5)}):Play()
		task.wait(0.5)
		if not isOpen then MainFrame.Visible = false end
	end
end

ToggleButton.MouseButton1Click:Connect(toggleUI)
CloseButton.MouseButton1Click:Connect(toggleUI)

-- Optional: Press E to toggle (PC only)
player:GetMouse().KeyDown:Connect(function(key)
	if key:lower() == "e" then
		toggleUI()
	end
end)

print("Egg Enhancer UI Loaded (Fully Responsive) - by Jandel | Tap Egg or Press E")
